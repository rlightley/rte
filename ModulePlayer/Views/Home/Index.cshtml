@model ModulePlayer.Models.UploadViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Upload</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Index" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @foreach (var packageType in Model.Packagetypes)
            {
                <p>@packageType</p>
            }
            <div class="form-group">
                <p>Paste me from above</p>
                <label asp-for="PackageType" class="control-label"></label>
                <input asp-for="PackageType" class="form-control"/>
                <span asp-validation-for="PackageType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="File" />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
